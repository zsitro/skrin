*, *:before, *:after
	box-sizing border-box


html, body
	margin 0
	padding 0

body

	ff Helvetica, sans-serif
	color $colorFont
	background-color $colorBackground
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	//overflow-x hidden
	position relative
	font-size $fontsizeBase

	a
		color $colorLink
		text-decoration none

		&:hover
			color $colorHover
			text-decoration none

		&:focus
			outline 0
			color inherit
			text-decoration none

	strong
		font-weight 800


.l-common__wrapper
	max-width 1170px
	margin 0 auto
	background white

	@media screen and (max-width: 1170px)
		padding 0 2em 0

	@media screen and (max-width: 767px)
		padding 0 1.2em 0


// @TODO: isolate to m-mobilemenu
.l-common__site-content
	background white
	transition transform 200ms ease-in-out
	z-index 2
	position relative
	box-shadow 0 0 30px rgba(0,0,0,.3)

	&.is-pushed
		transform translate3d(-300px,0,0)


